public class Solution {
    public int searchInsert(int[] nums, int target) {
        if(nums == null || nums.length == 0){
            return -1;
        }
        int pos = lowerBound(nums, target);
        return pos;
    }
    public int lowerBound(int[] nums, int target){
        int start = 0;
        int end = nums.length;
        while(start < end){
            int mid = start + (end - start) / 2;
            if(nums[mid] < target){
                start++;
            }else{
                end = mid;
            }
        }
        return start;
    }
}
