public class Solution {
    public boolean searchMatrix(int[][] matrix, int target) {
        int m = matrix.length;
        int n = matrix[0].length;
        
        int first = 0;
        int last = m * n;
        while(first != last){
            int mid = first + (last - first) / 2;
            if(matrix[mid / n][mid % n] < target)
                first = mid + 1;
            else
                last = mid;
        }
        if(first == m * n || matrix[first / n][first % n] != target)
            return false;
        return true;
    }
}
