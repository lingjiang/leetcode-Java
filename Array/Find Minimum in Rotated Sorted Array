public class Solution {
    public int findMin(int[] num) {
        if(num == null || num.length == 0)
            return -1;
            
        int left = 0, right = num.length - 1;
        while(left < right){
            if(num[left] < num[right])
                break;
            
            int mid = left + (right - left) / 2; //if only 2 elements, it's the left
            if(num[left] <= num[mid])            //== means only 2 elements and num[left] > num[right]
                left = mid + 1;
            else
                right = mid; //num[mid] could be the minimum
        }
        return num[left];
    }
}
