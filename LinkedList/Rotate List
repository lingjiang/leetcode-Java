/**
 * Definition for singly-linked list.
 * public class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode(int x) { val = x; }
 * }
 */
public class Solution {
    public ListNode rotateRight(ListNode head, int k) {
        if(head == null)
            return null;
            
        ListNode fast = head;
        ListNode slow = head;
        
        for(int i = 1; i <= k; i++){
            // k 大于链表长度，约减k
            if(fast.next == null){
                fast = head;
                k = k % i;
                i = 0;
            }
            else
                fast = fast.next;
        }
        while(fast.next != null){
            fast = fast.next;
            slow = slow.next;
        }
        fast.next = head;
        head = slow.next;
        slow.next = null;
        return head;
    }
}
